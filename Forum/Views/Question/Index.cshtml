@model IEnumerable<Forum.Models.Question>

<h1>Forum</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

@foreach (var item in Model)
{
    <div class="question-item">
        <h4>@item.Title</h4>
        <p>@item.Description</p>
        <p>
            Posted by: @(item.User?.UserName ?? "Unknown") | 
            Total answers: @(item.Answers?.Count ?? 0)
        </p>
        
        <!-- Details Link -->
        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Details</a>

           <!-- Edit Button -->
         
            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Edit</a>

            <!-- Delete Button -->
            <form action="@Url.Action("Delete", "Question", new { id = item.Id })" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this question?');">
             <button type="submit" class="btn btn-danger">Delete</button>
            </form>

            
        
    </div>
}
